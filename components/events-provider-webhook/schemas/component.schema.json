{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "events-provider-webhook config",
  "type": "object",
  "required": ["target_url"],
  "properties": {
    "target_url": {
      "type": "string",
      "minLength": 1
    },
    "method": {
      "type": "string",
      "default": "POST"
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "auth": {
      "type": "string"
    },
    "timeout_ms": {
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}
